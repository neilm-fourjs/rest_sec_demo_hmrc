# Configuration
#

oidc.form.logo.suffix           = "/fjs/logo.png"
oidc.form.logout.query          = "../res/logout_query.xhtml" # location of logout query formular

oidc.logout.default.end_url     = "/demos.html" # default ending page after logout
oidc.logout.id_token_hint       = true          # should send id token hint (RECOMMENDED)
oidc.logout.post_redirect       = true          # should send the post redirect uri (OPTIONAL)

oidc.oauth.subject.identifier   = "id"          # default oauth token entry name representing the user identity
#oidc.authenticate.redirect      = "302"         # <302|POST|GET> perform the authentication redirect via html formular or 302 redirect
oidc.authenticate.redirect      = "GET"         # <302|POST|GET> perform the authentication redirect via html formular or 302 redirect

